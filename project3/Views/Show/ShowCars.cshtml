@model List<Car>
@{
    ViewData["Title"] = "Cars site ";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarsSite</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/project3.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar ">
            <div class="logo">
                <img src="~/css/logo.png" />
            </div>
            <div class="links">
                <a class="bts" asp-area="" asp-controller="Home" asp-action="Index">Home page</a>




                <a class="bts" asp-area="" asp-controller="Cars" asp-action="CarsList">Cars List</a>
             
                <a class="bts" asp-area="" asp-controller="Login" asp-action="Logout">Log out</a>




            </div>

        </nav>
    </header>
    <div class="container">
        <table class="carTable table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Model</th>
                    <th>Color</th>
                    <th>Price$</th>
                    <th>Update</th>
                </tr>
            </thead>
            <tbody>
               
                @foreach (var car in Model)
                {
                    <tr>
                        <td>@car.Type</td>
                        <td>@car.Model</td>
                        <td>@car.Color</td>
                        <td>@car.Price $</td>
                        <td><a asp-action="Delete" asp-controller="Show" asp-route-CarId="@car.CarId">Delete</a></td>
                    </tr>
                }

            </tbody>
        </table>

    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Cars4sales - <a>Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

</body>
</html>

